citHeader("To cite Rvision in publications use:")

year <- sub("-.*", "", meta$Date)
note <- sprintf("R package version %s", meta$Version)

citEntry(
  entry    = "Manual",
  title    = "{Rvision} - A computer vision library for R",
  author   = "Simon Garnier and John Muschelli",
  journal  = "",
  year     = year,
  volume   = "",
  number   = "",
  pages    = "",
  note     = note,
  url      = "https://swarm-lab.github.io/Rvision/",
  textVersion = paste0(
    "Simon Garnier and John Muschelli (", year, "). Rvision - A computer vision library for R. ", note, "."
  )
)
